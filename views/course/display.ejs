<%- include("../header.ejs") %>
    <br>
    <h2 class="fw-bold text-center mt-5">Course Display</h2>
    <div class="container">
        <hr>
        <br>
        <table class="table table-bordered text-center">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Course</th>
                <th>Status</th>
                <th>Message</th>
                <th>Action</th>
            </tr>

            <% c.forEach((item)=>{ %> <!-- c = course -->
                <tr>
                    <td>
                        <%= item.id %>
                    </td>
                    <td>
                        <%= item.name %>
                    </td>
                    <td>
                        <%= item.email %>
                    </td>
                    <td>
                        <%= item.course %>
                    </td>
                    <td>
                        <%= item.status %>
                    </td>
                    <td>
                        <%= item.comment %>
                    </td>
                    <td>
                        <a href="/courseView/<%= item.id %>" class="btn btn-danger btn-sm">View</a>
                        <a href="/courseEdit/<%= item.id %>" class="btn btn-danger btn-sm">Edit</a>
                        <a href="/courseDelete/<%= item.id %>" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>

                <% }) %>

        </table>

        <center>
            <a href="/home" class="btn btn-info">Back</a>
        </center>
    </div>
    <br>

    <%- include("../footer.ejs") %>