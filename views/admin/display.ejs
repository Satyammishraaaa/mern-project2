<%- include("../header.ejs") %>
    <br><br>
    <h1 class="text-center mt-5">Admin Display</h1>
    <br>
    <div class="container">

        <!-- Print Message -->
        <% if (msg.length> 0) { %>
            <div class="alert alert-success">
                <%= msg %>
            </div>
            <% } %>

                <table class="table table-bordered text-center">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Course</th>
                        <th>Status</th>
                        <th>Message</th>
                        <th></th>
                        <th></th>
                        <th>Action</th>
                    </tr>

                    <% c.forEach((item)=>{ %> <!-- c = course -->
                        <tr>
                            <td>
                                <%= item.id %>
                            </td>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.email %>
                            </td>
                            <td>
                                <%= item.course %>
                            </td>
                            <td>
                                <%= item.status %>
                            </td>
                            <td>
                                <%= item.comment %>
                            </td>
                            <td>
                                <form action="/admin/updateStatus/<%= item.id %>" method="post">
                                    <textarea name="comment" id=""></textarea>
                                    <input type="hidden" name="name" value="<%= item.name %>">
                                    <input type="hidden" name="email" value="<%= item.email %>">
                                    <input type="hidden" name="course" value="<%= item.course %>">

                            </td>
                            <td>
                                <button type="submit" class="btn btn-info text-white" name="status"
                                    value="Approved">Approved</button>

                                <button type="submit" class="btn btn-danger text-white" name="status"
                                    value="Rejected">Rejected</button>
                                </form>
                            </td>
                            <td>
                                <a href="" class="btn btn-info">View</a>
                                <a href="" class="btn btn-success">Edit</a>
                                <a href="" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>

                        <% }) %>

                </table>

                <center>
                    <a href="/home" class="btn btn-info">Back</a>
                </center>
    </div>
    <br>
    <%- include("../footer.ejs") %>